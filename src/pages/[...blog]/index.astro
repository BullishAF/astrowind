---
import Layout from '~/layouts/PageLayout.astro';
import SinglePost from '~/components/blog/SinglePost.astro';
import ToBlogLink from '~/components/blog/ToBlogLink.astro';

import { getCanonical, getPermalink } from '~/utils/permalinks';
import { canIndexBlogPost, fetchPosts, isBlogEnabled, isBlogPostRouteEnabled } from '~/utils/blog';
import { findImage } from '~/utils/images';

export async function getStaticPaths() {
  if (!isBlogEnabled || !isBlogPostRouteEnabled) return [];
  return (await fetchPosts()).map((post) => ({
    params: {
      blog: post.permalink,
    },
    props: { post },
  }));
}

const { post } = Astro.props;
const url = getCanonical(getPermalink(post.permalink, 'post'));

const image = await findImage(post.image);

const metadata = {
  title: post.title,
  description: post.description,
  canonical: post.canonical || url,
  robots: {
    index: canIndexBlogPost,
  },
  openGraph: {
    type: 'article',
    ...(image ? { images: [{ url: image.src, width: image.width, height: image.height }] } : {}),
  },
};
---

<Layout {metadata}>
  <SinglePost post={{ ...post, image: image }} url={url} />
  <ToBlogLink />
</Layout>
